<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activties.Fragments.settings.AppSettingsFragment">




    <ImageButton
        android:id="@+id/BackBtn"
        android:layout_width="64dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:backgroundTintMode="src_in"
        android:scaleType="fitCenter"
        android:src="@drawable/quantum_ic_arrow_back_grey600_24_foreground" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Automatic Logout"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/OneDay"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/whiteSmoke"
                    android:gravity="center|left"
                    android:paddingLeft="50dp"
                    android:text="One Day"
                    android:textAlignment="gravity"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|end"
                    android:layout_marginRight="25dp"
                    android:tag="picture"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_check_circle_black_24dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/Disabled"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/whiteSmoke"
                    android:gravity="center|left"
                    android:paddingLeft="50dp"
                    android:text="Two Days"
                    android:textAlignment="gravity"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|end"
                    android:layout_marginRight="25dp"
                    android:tag="picture"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_check_circle_black_24dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/Enabled"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/whiteSmoke"
                    android:gravity="center|left"
                    android:paddingLeft="50dp"
                    android:text="Five Days"
                    android:textAlignment="gravity"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|end"
                    android:layout_marginRight="25dp"
                    android:tag="picture"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_check_circle_black_24dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/SevenDay"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/whiteSmoke"
                    android:gravity="center|left"
                    android:paddingLeft="50dp"
                    android:text="Seven Days"
                    android:textAlignment="gravity"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|end"
                    android:layout_marginRight="25dp"
                    android:tag="picture"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_check_circle_black_24dp" />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>